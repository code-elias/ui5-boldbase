<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>

  <SegmentedButton selectionChange="onProductTabChange" busyIndicatorDelay="0">
    <items>

      <!-- LIST -->
      <SegmentedButtonItem text="{i18n>LIST}" key="all" width="6rem">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </SegmentedButtonItem>

      <!-- ORDER -->
      <SegmentedButtonItem text="{i18n>ORDER}" key="order" width="6rem">
        <layoutData>
          <FlexItemData growFactor="1" />
        </layoutData>
      </SegmentedButtonItem>

    </items>
  </SegmentedButton>

</core:FragmentDefinition>